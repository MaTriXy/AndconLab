<?xml version="1.0" encoding="utf-8"?>

<com.pagesuite.flowtext.FlowTextView xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_marginBottom="@dimen/speaker_bottom_margin">

    <ImageView
        android:id="@+id/speaker_item_img"
        android:layout_width="@dimen/speaker_image_width"
        android:layout_height="@dimen/speaker_image_height"
        android:padding="@dimen/speaker_image_padding"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/speaker_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.pagesuite.flowtext.FlowTextView>